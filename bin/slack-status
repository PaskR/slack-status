#!/usr/bin/env php
<?php

require_once __DIR__ . '/../vendor/autoload.php';

use App\Output;
use App\SlackStatus;

$slack = new SlackStatus();

$command = $argv[1] ?? null;
$arg = $argv[2] ?? null;

try {
    switch ($command) {
        case 'login':
            $slack->authenticate();
            break;

        case 'change':
            if (!$arg) {
                Output::writeln("Usage: php slack-status change [type]");
                exit(1);
            }
            $slack->updateStatus($arg);
            break;

        case 'presets-list':
            $slack->listPresets();
            break;

        default:
            Output::writeln("Usage:");
            Output::writeln("  php slack-status login");
            Output::writeln("  php slack-status change [type]");
            Output::writeln("  php slack-status presets-list");
            exit(1);
    }
} catch (JsonException $e) {
    Output::writeln("âŒ Erreur : {$e->getMessage()}");
}